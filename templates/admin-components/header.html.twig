<header>
    <div class="topbar d-flex align-items-center">
        <nav class="navbar navbar-expand">
            <div class="mobile-toggle-menu"><i class='bx bx-menu'></i>
            </div>
            <div class="search-bar flex-grow-1">
                <div class="position-relative search-bar-box">
                   <!-- <input type="text" class="form-control search-control" placeholder="Type to search..."> <span class="position-absolute top-50 search-show translate-middle-y"><i class='bx bx-search'></i></span>
                    <span class="position-absolute top-50 search-close translate-middle-y"><i class='bx bx-x'></i></span>-->
                </div>
            </div>
            
            <div class="top-menu ms-auto">
                <ul class="navbar-nav align-items-center">
                    
                  
                      {% if ( app.user.roles[0] == 'ROLE_OPERATOR') or (app.user.roles[0] == 'ROLE_USER') %}

                    
                    <li class="nav-item dropdown dropdown-large">
                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> 
                            {% set inbox = 0 %}

                            {% for message in messages %}
                                {% if message.receiver.id == app.user.id %}
                                    {% if message.vue == 0 %}
                                        {% set inbox = inbox+1 %}
                                    {% endif %} 
                                {% endif %}
                                
                            {% endfor %} 

                            {% if inbox != 0 %}
                                <span class="alert-count">
                                    {{ inbox }}
                                </span>
                            {% endif %}
                            
                            <i class='bx bx-comment'></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a href="javascript:;">
                                <div class="msg-header">
                                    <p class="msg-header-title">Messages</p>
                                    <!--<p class="msg-header-clear ms-auto">Marque tout comme lu</p>-->
                                </div>
                            </a>
                            <div class="header-message-list">
                              
                                {% for item in messages %}  
 
                                                <a class="dropdown-item" href="javascript:;">
                                                    <div class="d-flex align-items-center">
                                                        <div class="user-online">
                                                            <img src="{{item.sender.photoURL}}" class="msg-avatar" alt="user avatar">
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="msg-name">{{ item.sender.firstname }} {{ item.sender.lastname }} <span class="msg-time float-end">14 sec ago</span></h6>
                                                            

                                                            {% if item.vue == 0 %}
                                                                <p class="msg-info">
                                                            <strong> {{ item.message | slice(0,25) }}...</strong>
                                                            </p>

                                                            {% else %}
                                                                <p class="msg-info">
                                                                {{ item.message | slice(0,25) }}...
                                                            </p>

                                                            {% endif %}
                                                            
                                                        </div>
                                                    </div>
                                                </a>
                                                 
                                {% endfor %} 
                                
                                
                                

                            </div>
                            {% if app.user.roles[0] == 'ROLE_OPERATOR' %}
                                <a href="{{ path('operator_messages_app_route') }}">
                                    <div class="text-center msg-footer">Afficher tous les messages</div>
                                </a>
                                
                            {% endif %}

                            {% if app.user.roles[0] == 'ROLE_USER' %}
                                <a href="{{ path('client_messages_app_route') }}">
                                    <div class="text-center msg-footer">Afficher tous les messages</div>
                                </a>
                                
                            {% endif %}

                              
                        </div>
                    </li>
                    
 
                    {% endif %}
                </ul>
            </div>








            <div class="user-box dropdown">
                <a class="d-flex align-items-center nav-link dropdown-toggle dropdown-toggle-nocaret" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="{{ app.user.photoURL }}" class="user-img" alt="user avatar">
                    <div class="user-info ps-3">
                        <p class="user-name mb-0">{{app.user.firstname}} {{app.user.lastname}}</p>
                        <p class="designattion mb-0">

                            {% if app.user.roles[0] =="ROLE_ADMIN" %}
                                administrateur  
                            {% endif %}

                            {% if app.user.roles[0] =="ROLE_USER" %}
                                utilisateur  
                            {% endif %}

                            {% if app.user.roles[0] =="ROLE_OPERATOR" %}
                                op√©rateur  
                            {% endif %}


                            


                            
                        </p>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end"> 
                    <!--<li><a class="dropdown-item" href="javascript:;"><i class="bx bx-cog"></i><span>Settings</span></a></li>-->
                   
                    <li><a class="dropdown-item" href="/logout"><i class='bx bx-log-out-circle'></i><span>Logout</span></a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>