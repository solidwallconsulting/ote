{% extends 'base.html.twig' %}
 
{% block title %}Tunisiens Du Monde | mot de passe oublié{% endblock %}



{% block body %} 



<div class="intro intro-other">
    <header class="bg-intro-other"   >
        <div class="top-block d-md-flex justify-content-between">
            <div class="main-logo">
                <div class="d-flex top-logos">
                    <div class="logo-bloc">
                        <img src="/images/ote.png" class="w-100" alt="">
                    </div>
        
                    <div class="logo-bloc">
                        <img src="/images/tn.png" class="w-100" alt="">
                    </div>
                    
        
                </div>
            </div>


            <div class="actionsbtn-header d-flex">
                 <img src="/images/logo.png" class="d-sm-none d-md-block"  class="app-logo" width="245px"  alt="">
            </div>
        </div>


       

    </header>





    
    <section class="inner-page" style="margin-top: 100px;margin-bottom: 100px" >
      <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-sm-12 m-auto card card-body">
                     <h3>
                        Mot de passe oublié?
                    </h3>
                    <form role="form" class="login-form" method="post">
                         
                        <div class="form-group">
                            <p class="">
                                Veuillez entrer votre e-mail pour rechercher votre compte.
                            </p>
                        </div>
                        <div class="form-group">
                            <div class="input-icon"> 
                                <input type="email" name="email" placeholder="votre e-amil address"  class="form-control"   required>
                            </div>
                        </div>
                         
                        <div class="text-center">
                            <button class="btn action-btn log-btn btn-block mt-3">Envoyer</button>
                        </div>

                        {% if errorMessage != '' %}
                        <div class="alert alert-danger mt-3">
                            {{ errorMessage }}
                        </div>
                    {% endif %}

                    {% if successMessage != '' %}
                        <div class="alert alert-success mt-3">
                            {{ successMessage }}
                        </div>
                    {% endif %}

                    
                         

                    </form>
                   
                
            </div>
        </div>
        
        
      </div>
    </section>




</div>



  
{% endblock %}
